//  ********* FINDS THE LONGEST WORD IN AN ARRAY **************

testArray = ["Jim", "Jimmy", "carter", "woolstenhlume", "bj", "jacobsonsentonsingtongermon"]
longestWord = testArray[0] 
for (var i = 1; i < testArray.length; i++){
		if (longestWord.length < testArray[i].length){
			longestWord = testArray[i];
		};
};
document.write(longestWord);
